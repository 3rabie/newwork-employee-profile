# Docker Compose Environment Variables
# Copy this file to .env and update values for your environment

# JWT Configuration
JWT_SECRET=secret-key-change-in-production-minimum-256-bits-required-for-hs256
JWT_EXPIRATION=86400000

# HuggingFace API Configuration
APP_AI_HF_ENABLED=true
APP_AI_HF_URL=https://router.huggingface.co/v1/chat/completions
APP_AI_HF_MODEL=meta-llama/Llama-3.1-8B-Instruct
APP_AI_HF_API_KEY=your-huggingface-api-key-here
APP_AI_HF_TIMEOUT=PT10S

# Security Configuration
APP_SECURITY_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,http://localhost
APP_SECURITY_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
APP_SECURITY_ALLOWED_HEADERS=*
APP_SECURITY_ALLOW_CREDENTIALS=true
APP_SECURITY_SWITCH_USER_ENABLED=true

# Spring Profile (default, dev, prod)
SPRING_PROFILES_ACTIVE=default

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_ENABLE_SWITCH_USER=true
